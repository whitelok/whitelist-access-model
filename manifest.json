{
    "name": "WebAccessList",
    "version": "1.1",
    "description": "Web access control.",
    "browser_action": {
        "default_title": "WebAccessList",
        "default_icon": "img/128icon.png",
        "default_popup": "html/popup.html"
    },

    "background":{
        "scripts":["js/background.js"],
        "persistent": true
    },

    "manifest_version": 2,

    "permissions":[ "http://*/*", "https://*/*", "tabs", "unlimitedStorage", "webRequest", "webRequestBlocking", "contentSettings"]
}